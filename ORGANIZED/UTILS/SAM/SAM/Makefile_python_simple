# Simplified Makefile for SAM/NN shared library
# Builds essential components only to avoid compilation issues

CC = gcc
CFLAGS = -O3 -fPIC -Wall -std=c99
INCLUDES = -I. -I../../utils/NN/MUZE -I../../utils/NN/NN -I../../utils/NN/TRANSFORMER
LIBS = -lm

# Detect OS
UNAME_S := $(shell uname -s)
ifeq ($(UNAME_S),Darwin)
    SHARED_EXT = dylib
    SHARED_FLAG = -dynamiclib
else
    SHARED_EXT = so
    SHARED_FLAG = -shared
endif

# Core source files (minimum viable set)
SAM_SRC = SAM.c sam_morphogenesis.c
MUZE_SRC = ../../utils/NN/MUZE/mcts.c ../../utils/NN/MUZE/ewc.c ../../utils/NN/MUZE/growth.c
NN_SRC = ../../utils/NN/NN/NN.c

# Target library
TARGET = libsam_nn.$(SHARED_EXT)

all: $(TARGET)

$(TARGET): $(SAM_SRC) $(MUZE_SRC) $(NN_SRC)
	$(CC) $(CFLAGS) $(SHARED_FLAG) $(INCLUDES) -o $@ $^ $(LIBS)
	@echo "Built: $@"

clean:
	rm -f $(TARGET) *.o

.PHONY: all clean
